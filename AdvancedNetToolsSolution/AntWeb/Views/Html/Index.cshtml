@{
    ViewBag.Title = "Html tools";
    ViewBag.MetaDescription = "Html minifier and beautifier.";
}
<script src="~/scripts/html/index.js"></script>
<div class="normalheader transition animated fadeIn small-header">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="/css">Html processing</a>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                Html processing
            </h2>
            <small>Minify Html files with check for errors and warnings.</small>
        </div>
    </div>
</div>

@using (Html.BeginForm("Download_Document", "html"))
{
    @(@Html.Raw(Html.AntCreateStandardPanel("hgreen", "Upload files (.html)",
    Html.Kendo().Upload()
                        .Name("htmlUploads")
                        .Multiple(true)
                        .ShowFileList(true)
                        .DropZone("#wrapper")
                        .Validation(v => v.AllowedExtensions(new string[] { "html" }).MaxFileSize(10 * 1024 * 1024))
                        .Deferred().ToHtmlString()
    )))

    @(@Html.Raw(Html.AntCreateStandardPanel("hgreen", "Minified files", @"
    <p class='text-center'>
        <input type = 'submit' class='k-button k-primary wide-btn' value='Minify and Download' />
    </p>")))

}
