@{
    ViewBag.Title = "Word processing";
    ViewBag.MetaDescription = "Word processing enables users to effortlessly import and export files to and from some of the most commonly used formats. Supported formats include Open XML Word Document (.DOCX), Rich Text Format (.RTF) and Text Files (.TXT).";
}
<script src="~/Scripts/WordsProcessing/index.js"></script>

@using (Html.BeginForm("Download_Document", "wordsprocessing"))
{

    @(Html.Kendo().Upload()
                        .Name("wordUploads")
                        .Multiple(true)
                        .ShowFileList(true)
                        .Events(events => events.Select("onSelect"))
                        .Deferred()
    )
    @Html.Label("fileExtension", "Convert to: ")
    @(Html.Kendo().ComboBox()
                            .Name("convertTo")
                            .Filter("contains")
                            .Suggest(true)
                            .SelectedIndex(0)
                            .Items(items =>
                                {
                                    items.Add().Text("DOCX").Value("docx");
                                    items.Add().Text("RTF").Value("rtf");
                                    items.Add().Text("HTML").Value("html");
                                    items.Add().Text("TXT").Value("txt");
                                }
                            )
                            .Deferred()
    )

